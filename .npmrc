# Use pnpm as the package manager
engine-strict = true

# Save exact versions instead of ranges
save-exact = true

# Don't automatically install peer dependencies
auto-install-peers = false

# Use the public npm registry
registry = https://registry.npmjs.org/

# Enable package-lock for security
package-lock = true

# Disable funding messages
fund = false

# Disable audit during install for faster installs (run manually)
audit = false

# Progress indicator
progress = true

# Use long cache (30 days)
cache-min = 2592000 