# Auto detect text files and perform LF normalization
* text=auto

# Force LF line endings for specific file types
*.js text eol=lf
*.ts text eol=lf
*.jsx text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.less text eol=lf
*.svg text eol=lf
*.txt text eol=lf

# Configuration files
*.rc text eol=lf
.*rc text eol=lf
*.conf text eol=lf
*.config text eol=lf
*.cfg text eol=lf
*.ini text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf
*.fish text eol=lf

# Batch files should use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.bmp binary
*.tiff binary
*.webp binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.7z binary
*.rar binary

# Font files
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary
*.eot binary

# Audio/Video files
*.mp3 binary
*.mp4 binary
*.mov binary
*.avi binary
*.wav binary

# Lock files (should not be modified by git)
package-lock.json binary
yarn.lock binary
pnpm-lock.yaml binary 